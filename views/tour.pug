extends base
include _reviewCard
block append head
  script(src='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js')
  link(href='https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.css' rel='stylesheet')


mixin overview(label, text, icon)
  .overview-box__detail
    svg.overview-box__icon
      use(xlink:href=`/img/icons.svg#icon-${icon}`)
    span.overview-box__label= label
    span.overview-box__text= text 
block  content
  section.section-header
    .header__hero
      .header__hero-overlay &nbsp;
      img.header__hero-img(src=`/img/tours/${data.imageCover}`, alt=`${data.name}`)

    .heading-box
      h1.heading-primary
        span=data.name
      .heading-box__group
        .heading-box__detail
          svg.heading-box__icon
            use(xlink:href='/img/icons.svg#icon-clock')
          span.heading-box__text=`${data.duration} days`
        .heading-box__detail
          svg.heading-box__icon
            use(xlink:href='/img/icons.svg#icon-map-pin')
          span.heading-box__text=`${data.startLocation.description}`

  section.section-description
    .overview-box
      div
        .overview-box__group
          h2.heading-secondary.ma-bt-lg Quick facts
          - const date = data.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
          +overview('Next date', date, 'calendar')
          +overview('Difficulty', data.difficulty, 'trending-up')
          +overview('Participants', `${data.maxGroupSize} people`, 'user')
          +overview('Rating', `${data.ratingsAverage} / 5`, 'star')
         

        .overview-box__group
          h2.heading-secondary.ma-bt-lg Your tour guides
          each guide in data.guides
            .overview-box__detail
              img.overview-box__img(src=`/img/users/${guide.photo}`, alt=`${guide.name}`)
              - if (guide.role === 'lead-guide')
                span.overview-box__label Lead guide
              - if (guide.role === 'guide')
                span.overview-box__label Tour guide
              span.overview-box__text= guide.name
          

    .description-box
      h2.heading-secondary.ma-bt-lg= `About ${data.name} tour`
      - const para=data.description.split('\n');
      each p in para 
        p.description__text=p
      
  section.section-pictures
    each pic,i in data.images
      .picture-box
        img.picture-box__img(src=`/img/tours/${pic}`, alt=`${data.name} ${i+1}`, class=`picture-box__img--${i+1}`)

  section.section-map
    #map(data-locations=`${JSON.stringify(data.locations)}`)

  section.section-reviews
    .reviews
      each rev in data.review
        +reviewCard(rev)

  section.section-cta
    .cta
      .cta__img.cta__img--logo
        img(src='/img/logo-white.png', alt='Natours logo')
      img.cta__img.cta__img--1(src=`/img/tours/${data.images[1]}`, alt='')
      img.cta__img.cta__img--2(src=`/img/tours/${data.images[2]}`, alt='')
      .cta__content
        h2.heading-secondary What are you waiting for?
        p.cta__text= `${data.duration} days. 1 adventure. Infinite memories. Make it yours today!`
        button.btn.btn--green.span-all-rows Book tour now!